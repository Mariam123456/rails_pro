<p id="notice"><%= notice %></p>

<div class="container">
<h2>Users</h2>
  <p>The .table-striped class adds zebra-stripes to a table:</p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name%></td>
        <td><%= user.email%></td>
        <td><div class="btn btn-info text-white"><%= link_to 'Show', user %></div></td>
        <td><div class="btn btn-info text-white"><%= link_to 'Edit', edit_user_path(user) %></div></td>
        <td><div class="btn btn-info text-white"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      </tr>
    <% end %>
  </table>
</div>

<br>

<div class="btn btn-info text-white"><%= link_to 'New User', new_user_path %></div>
