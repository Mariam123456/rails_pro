
<center>
<% if signed_in? %>
  <div class="title-review">
  <h2>Add a review:</h2></div>
<%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
    <%= f.text_area :body %>
    <br>
    </p>
    <p>
   <div class="rating" style="padding: 4px;"></div>
    </p>  
    <p>
    <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>
</center>
